<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>
<!-- <?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?> -->

<VBox prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="uk.ac.soton.comp2211.app.MainController" >
  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="File">
          <items>
                  <MenuItem mnemonicParsing="false" onAction="#openAirport" text="Open Airport" />
            <MenuItem mnemonicParsing="false" onAction="#importAirport" text="Import From..." />
              <MenuItem mnemonicParsing="false" onAction="#createAirport" text="New Airport" />
              <MenuItem mnemonicParsing="false" onAction="#createObstacle" text="Create Obstacle" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" onAction="#closeAirport" text="Close" />
            <MenuItem mnemonicParsing="false" onAction="#exportAs" text="Export As..." />
            <SeparatorMenuItem mnemonicParsing="false" />
              <Menu mnemonicParsing="false" text="Preferences">
                  <items>
                  </items>
              </Menu>
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" onAction="#quitApplication" text="Quit" />
          </items>
            <graphic>
                <!-- <FontAwesomeIconView glyphName="FILE" /> -->
            </graphic>
        </Menu>
        <Menu mnemonicParsing="false" text="View">
          <items>
              <Menu mnemonicParsing="false" text="Themes">
                  <items>
                      <MenuItem mnemonicParsing="false" onAction="#darkMode" text="DarkMode "/>
                      <MenuItem mnemonicParsing="false" onAction="#lightMode" text="LightMode"/>
                      <MenuItem mnemonicParsing="false" onAction="#Default" text="DefaultColour" />
                      <MenuItem mnemonicParsing="false"  onAction="#ColourBlind" text="ColourBlind" />
                  </items>
              </Menu>

            <MenuItem mnemonicParsing="false" onAction="#selectTopView" text="Top-Down" />
            <MenuItem mnemonicParsing="false" onAction="#selectSideView" text="Side-On" />
          </items>
            <graphic>
                <!-- <FontAwesomeIconView glyphName="FILM" /> -->
            </graphic>
        </Menu>
            <Menu mnemonicParsing="false" text="Help">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#showAbout" text="About" />
                  <MenuItem mnemonicParsing="false" onAction="#showInstructions" text="Instructions" />
               </items>
                <graphic>
                    <!-- <FontAwesomeIconView glyphName="QUESTION" /> -->
                </graphic>
            </Menu>
      </menus>
    </MenuBar>
      <Label fx:id="airportName" alignment="CENTER" minWidth="60.0" prefWidth="-1.0" style="&#10;" textAlignment="CENTER" wrapText="false">
         <font>
            <Font size="18.0" fx:id="x11" />
         </font>
         <textFill>
            <Color red="0.624" green="0.624" blue="0.624" fx:id="x21" />
         </textFill>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </Label>
      <ScrollPane fitToHeight="true">
        <content>
          <AnchorPane fx:id="airportParent" />
        </content>
      </ScrollPane>
    <HBox id="HBox" alignment="CENTER_LEFT" spacing="5.0" VBox.vgrow="NEVER">
      <children>
        <Label maxHeight="1.7976931348623157E308" maxWidth="-1.0" text="Left status" HBox.hgrow="ALWAYS">
          <font>
            <Font size="11.0" fx:id="x3" />
          </font>
          <textFill>
            <Color red="0.625" green="0.625" blue="0.625" fx:id="x4" />
          </textFill>
        </Label>
        <Pane prefHeight="-1.0" prefWidth="-1.0" HBox.hgrow="ALWAYS" />
        <Label font="$x3" maxWidth="-1.0" text="Right status" textFill="$x4" HBox.hgrow="NEVER" />
      </children>
      <padding>
        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
      </padding>
    </HBox>
  </children>
</VBox>
